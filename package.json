{
  "name": "ldaca_icons",
  "version": "1.0.4",
  "description": "Icon library for use in LDaCA projects",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lerna:new-version": "lerna version patch --conventional-commits",
    "lerna:publish": "lerna publish from-package",
    "generate-svgs": "yarn run svgs:icon && yarn run prettier",
    "prettier": "prettier --write 'components/**/*'",
    "svgs:icon": "node build/build-icon.js",
    "svgs:optimize": "node build/optimize-icon.js",
    "prepublish": "yarn run build",
    "release": "run-s build np"
  },
  "repository": "git+https://github.com/Language-Research-Technology/icon-library.git",
  "author": "Otis Carmichael",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Language-Research-Technology/icon-library/issues"
  },
  "homepage": "https://language-research-technology.github.io/icon-library/",
  "files": [
    "icons/"
  ],
  "engines": {
    "node": ">= 10"
  },
  "private": true
}
